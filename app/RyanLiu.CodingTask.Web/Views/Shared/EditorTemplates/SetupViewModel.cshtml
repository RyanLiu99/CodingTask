@using RyanLiu.CodingTask.Web.Utilities;

@model RyanLiu.CodingTask.Web.Models.SetupViewModel


<div class="form-horizontal">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.HiddenFor(model => model.setup_id)

        @Html.LabelFor(model => model.optimization_goal_id, "Optimizatoin Goal", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DropDownListFor(m => m.optimization_goal_id, SelectListItemsUtility.GetOptimizationGoals().Result, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.optimization_goal_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.optimization_goal_value, "Optimizatoin Goal Value", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.optimization_goal_value, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.optimization_goal_value, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.date_start, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.date_start, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.date_start, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.date_end, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.date_end, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.date_end, "", new { @class = "text-danger" })
        </div>
    </div>

</div>
